@*@model StoreProject.Models.Staff*@
@model StoreProject.ViewModels.StaffEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StaffId" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Store" class="control-label"></label>
                <select asp-for="Store" asp-items="Model.Stores" class="form-control">
                    <option>All</option>
                </select>
                @*<span asp-validation-for="Store" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Manager" class="control-label"></label>
                <select asp-for="Manager" asp-items="Model.Managers" class="form-control">
                    <option>All</option>
                </select>
                @*<span asp-validation-for="Manager" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @*@Html.CheckBoxFor(model => model.Active, true)*@
                @Html.RadioButtonFor(model => model.Active, true, new{id = "active"})
                <label for="active">Active</label>
                @*@Html.CheckBoxFor(model => model.Active, false)*@
                @Html.RadioButtonFor(model => model.Active, false, new{id = "notactive"})
                <label for="notactive">NotActive</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
