@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@*@model IEnumerable<StoreProject.Models.Staff>*@
@model StoreProject.ViewModels.StaffListViewModel

@{
    ViewData["Title"] = "Index";
}

<link href="/css/PagedList.css" rel="stylesheet" type="text/css" />

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
    <div class="row">
        <form asp-controller="Staffs" asp-action="Index" method="Get">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="NameSearch" class="control label"></label>
                    <input asp-for="NameSearch" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="EmailSearch" class="control-label"></label>
                    <input asp-for="EmailSearch" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneSearch" class="control-label"></label>
                    <input asp-for="PhoneSearch" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="SelectedManager" class="control-label"></label>
                    <select asp-for="SelectedManager" asp-items="Model.Managers" class="form-control" >
                        <option>All</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="SelectedStore" class="control-label"> </label>
                    <select asp-for="SelectedStore" asp-items="Model.Stores" class="form-control" >
                        <option>All</option>
                    </select>
                </div>
                <div class="form-group">
                    @*@*<label asp-for="ActiveBox" class="control-label"></label>*@
                    @*<Select asp-for="ActiveSearch" asp-items="Model.ActiveList" class="form-control">
                        <option>All</option>
                    </Select>*@
                    @*<input  asp-for="ActiveSearch" type="checkbox" class="form-control" />*@
                     @*@Html.CheckBoxFor(m => m.ActiveBox)*@
                   <input type="radio" id="All" name="ActiveBox" value="" checked>
                  <label for="All">All</label>
                  <input type="radio" id="Active" name="ActiveBox" value="true">
                  <label for="active">Active</label>
                  <input type="radio" id="NotActive" name="ActiveBox" value="false">
                  <label for="notactive">NotActive</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Filter" class="btn btn-primary"  />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="container">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staffs[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staffs[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staffs[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staffs[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staffs[0].Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staffs[0].StoreId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staffs[0].ManagerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Staffs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.StoreName)
            </td>
            <td>
               @*@Html.DisplayFor(modelItem => item.ManagerId)*@
               @Html.DisplayFor(modelItem => item.Manager.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StaffId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StaffId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StaffId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@Html.PagedListPager(Model.Staffs, page =>Url.Action("Index",
new {pageNumber = page, SearchString = Model.NameSearch,
    SelectedEmail = Model.EmailSearch, SelectedPhone = Model.PhoneSearch }), 
    PagedListRenderOptions.ClassicPlusFirstAndLast)

</div>