@*@model IEnumerable<StoreProject.Models.Brand>*@
@using StoreProject.ViewModels
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model StoreProject.ViewModels.BrandListViewModel
@{
    ViewData["Title"] = "Index";
}
<link href="/css/pagedList.css" rel="stylesheet" type="text/css" />


<h1>Index</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
    <div class="row">
        <form asp-controller="Brands" asp-action="Index" method="get">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="SearchString" class="control-label"></label>
                    <input asp-for="SearchString" class="form-control"  />
                    <input type="submit" value="Filter" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Brands[0].BrandName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Brands) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BrandId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BrandId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BrandId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    @*default paging control*@
    @*
    @Html.PagedListPager(Model.Brands, page => Url.Action("Index", 
    new {pageNumber = page, SearchString = Model.SearchString,}))
    *@
    
    @*Minimal paging control*@
    @Html.PagedListPager(Model.Brands, page => Url.Action("Index", 
    new {pageNumber = page, Model.SearchString}),  
    PagedListRenderOptions.Classic )

    @*Custom paging control*@
    @Html.PagedListPager(Model.Brands, page => Url.Action("Index", 
    new {pageNumber = page, Model.SearchString}),
    new PagedListRenderOptions { LinkToFirstPageFormat = "<< primera",LinkToPreviousPageFormat = "< Previous", LinkToNextPageFormat = "Next >", LinkToLastPageFormat = "&Uacute;ltima >> "})
    
    @*Custom paging control*@
    @Html.PagedListPager(Model.Brands, page => Url.Action("Index", 
    new {pageNumber = page, Model.SearchString}), 
    new PagedListRenderOptions { FunctionToDisplayEachPageNumber = page => ((page -1)* 4 + 1).ToString() + "_" + (((page -1 ) * 4) + 4 ).ToString(), MaximumPageNumbersToDisplay =5 })   
    
    @*Custom paging control*@
    @Html.PagedListPager(Model.Brands, page => Url.Action("Index", 
    new {pageNumber = page,  Model.SearchString}), 
    new PagedListRenderOptions {DelimiterBetweenPageNumbers = "|",DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded })

</div>