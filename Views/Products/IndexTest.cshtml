@model ReflectionIT.Mvc.Paging.PagingList<StoreProject.Models.Product>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "IndexTest";
}
<h1>Index Reflection</h1>

<p>
    <a asp-action="Create">Create New Product</a>
</p>

<div class="container">
<nav aria-label="Product Navigation">
    @await this.Component.InvokeAsync("Pager", new {PagingList = this.Model })
</nav>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Products[0].ProductName)*@
                Product Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Products.BrandId)*@
                B
                
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Products.CategoryId)*@
                C
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Products.ModelYear)      *@
                M
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Products.ListPrice)*@
                L
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ListPrice)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Product navigation" >
    <vc:pager paging-list="@Model" />    
</nav>
