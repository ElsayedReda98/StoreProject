@model StoreProject.ViewModels.ProductListViewModel

@*
    change pager to Model 

*@

<div class="container">
    @if (Model.TotalPages > 0)
    {
         <ul class="pagination justify-content-end">
            @if(Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Products" asp-action="Index"
                    asp-route-PageNumber="1">First</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Products" asp-action="Index"
                    asp-route-PageNumber="@(Model.CurrentPage -1)">Previous</a>
                </li>
            }

            @for (var counter = Model.StartPage; counter <= Model.Endpage; counter++)
            {
                        <li class="page-item @(counter == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-controller="Products" asp-route-PageNumber="@counter">@counter</a>
                        </li>
            }

            @*next and last*@
            @if (Model.CurrentPage < Model.TotalPages)
            {
                            <li>
                                <a class="page-link" asp-controller="Products" asp-action="Index" 
                    asp-route-PageNumber="@(Model.CurrentPage + 1)"> Next</a>
                            </li>
                            <li>
                                <a class="page-link" asp-controller="Products" asp-action="Index"
                    asp-route-PageNumber="@(Model.TotalPages)">Last</a>
                        </li>
            }
         </ul>
    }
</div>
